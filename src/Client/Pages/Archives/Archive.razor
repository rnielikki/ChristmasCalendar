@page "/archive/{Year:int}"
@layout ArchiveLayout
@inject NavigationManager nav
@inject joulukalenteri.Client.SharedCode.ArchiveReader reader
@inject joulukalenteri.Shared.IDateTime datetime

<div class=" wrapper">
    @if (reader.IsAvailableYear(Year))
    {
        <h1>Archive @Year</h1>
        <div class="content-wrapper">
            <ul>
                @for (int day = 1; day < 26; day++)
                {
                    <li><a href="/archive/@Year/@day">Day @day</a></li>
                }
            </ul>
        </div>
    }
    else
    {
        <p>This year is not available.</p>
    }
    <a href="/archive/" class="archive-back">Back to the list</a>
</div>

@code{
    [Parameter]
    public int Year { get; set; }
}
