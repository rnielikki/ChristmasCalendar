@functions{
    public int[] ShuffleDays() {
        Random random = new Random(DateTime.Now.Year);
        int[] result = Enumerable.Range(1, 25).ToArray();
        for (int i = 0; i < 25; i++) {
            Swap(ref result[i], ref result[random.Next(i,24)]);
        }
        return result;
    }
    private void Swap(ref int x, ref int y)
    {
        int temp = x;
        x = y;
        y = temp;
    }
